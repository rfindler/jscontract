{
  "name": "jscontract",
  "version": "1.0.0",
  "description": "Tools to help TypeScript programmers write type definitions.",
  "scripts": {
    "prepare": "husky install",
    "pretty-quick": "pretty-quick --staged",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshuahoeflich/jscontract.git"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "rules": {
      "max-classes-per-file": "off"
    },
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    }
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  }
}
